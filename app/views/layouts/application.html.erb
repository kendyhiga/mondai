<!DOCTYPE html>
<html>
  <head>
    <title>Mondai</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='container'>
      <h1 class='display-1'>Mondai</h1>
      <% if user_signed_in? %>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'float-right' %><br>
      <% else %>
        <%= link_to 'Login', new_user_session_path, class: 'float-right' %><br>
      <% end %>

      <%= notice if notice %>
      <%= alert if alert %>

      <%= yield %>
    </div>
  </body>
</html>
